@model List<Entity.Product>
@{
    ViewData["Title"] = "Demo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title page-title-4 bg-overlay bg-overlay-dark bg-parallax" id="page-title">
    <div href="/Home/Index" class="bg-section"><img src="~/assets/images/page-titles/10.jpg" alt="Background"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="title text-lg-left">
                    <div class="title-sub-heading">
                    </div>
                    <div class="title-heading">
                    </div>
                    <div class="clearfix"><h1 style="color:#fff"> Ürünlerimiz</h1></div>
                    <ol class="breadcrumb justify-content-lg-start">
                        <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="/Product/Demo">Ürünlerimiz</a></li>
                        <li class="breadcrumb-item active" aria-current="page"></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cases-standard" id="workStandard">
    <div class="container">
        <div class="row">

            @await Component.InvokeAsync("CategoryCommponent")
<div class="col-sm-12 col-md-12 col-md-12 cases-filter">
                <ul class="list-inline mb-0">
  

                </ul>
            </div>
        </div>
        <div class="row" id="all-cases" style="position: relative; height: 4564px;">

            @foreach (var item in Model)
           {
                <div class="col-lg-4 col-md-6 grid-item cat2 cat4" style="position: absolute; left: 379.99px; top: 0px;">
                    <div style="padding-left: 55px" class="portfolio-item mb-30">
                        <div style="padding-bottom:25px;" class="portfolio-wrapper">
                            <a href="/Product/ProductDetail/@item.ProductId" style="width: 414px;" class="">
                                <div class="portfolio-image w-img">
                                    <img style="background-color:#f7f7f7; height:280px; width:280px;" src="/assets/images/ürün1/@item.ImgPath" alt="">
                                </div>




                                <div>
                                    <div style=" " class=" bg-image hover-overlay ripple shadow-1-strong rounded text-center p-6 mb-6 bg-info text-white "> @item.ProductName</div>
                                </div>




                            </a><div  class="case-title">
                                <h4 style="font-size:20px;    padding-right: 90px;"><a href="/Product/ProductDetail/@item.ProductId" style="width: 250px;" class=""> </a><a href="/Product/Demo"> </a></h4>
                            </div>


                        </div>
                    </div>

                </div>


            }
    

            <style style="position: absolute; left: 379.99px; top: 1490px; transition-property: opacity, transform; transition-duration: 0.4s; transition-delay: 0ms; transform: translate3d(0px, 2748px, 0px);">
                .btn2 {
                    -moz-box-shadow: 0px 0px 0px 2px #07CBE1;
                    -webkit-box-shadow: 0px 0px 0px 2px #07CBE1;
                    box-shadow: 0px 0px 0px 2px #07CBE1;
                    background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #7892c2), color-stop(1, #07CBE1));
                    background: -moz-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                    background: -webkit-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                    background: -o-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                    background: -ms-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                    background: linear-gradient(to bottom, #07CBE1 5%, #07CBE1 100%);
                    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#7892c2', endColorstr='#476e9e',GradientType=0);
                    background-color: #07CBE1;
                    -moz-border-radius: 10px;
                    -webkit-border-radius: 10px;
                    border-radius: 7px;
                    border: 1px solid #07CBE1;
                    display: inline-block;
                    cursor: pointer;
                    color: #ffffff;
                    font-family: Arial;
                    font-size: 19px;
                    padding: 1px 37px;
                    text-decoration: none;
                    text-shadow: 0px 1px 0px #07CBE1;
                }

                    .btn2:hover {
                        background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #07CBE1), color-stop(1, #07CBE1));
                        background: -moz-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                        background: -webkit-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                        background: -o-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                        background: -ms-linear-gradient(top, #07CBE1 5%, #07CBE1 100%);
                        background: linear-gradient(to bottom, #07CBE1 5%, #07CBE1 100%);
                        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#476e9e', endColorstr='#7892c2',GradientType=0);
                        background-color: #07CBE1;
                    }

                .bnt2:active {
                    position: relative;
                    top: 1px;
                }
            </style>

        </div>


    </div>

</section>